[logging]
 default = FILE:/var/log/krb5libs.log
 kdc = FILE:/var/log/krb5kdc.log
 admin_server = FILE:/var/log/kadmind.log

[libdefaults]
 default_realm = {{ domainname|upper }}
 dns_lookup_realm = false
 dns_lookup_kdc = false
 ticket_lifetime = 24h
 renew_lifetime = 7d
 forwardable = true

[realms]
 {{ domainname|upper }} = {
  kdc = {{ ad_hostname }}
  admin_server = {{ ad_hostname }}
 }

[domain_realm]
 .{{ domainname }} = {{ domainname|upper }}
 {{ domainname }} = {{ domainname|upper }}

